---
import MainLayout from "../layouts/MainLayout.astro";
import { Terminal, Rocket, Pencil } from "lucide-react";

const features = [
  {
    title: "DevOps Expertise",
    description:
      "Leading DevOps transformation with a focus on developer experience and operational excellence.",
    icon: Terminal,
  },
  {
    title: "Technical Leadership",
    description:
      "Guiding teams through complex technical challenges and mentoring the next generation of engineers.",
    icon: Rocket,
  },
  {
    title: "Tech Writing",
    description:
      "Sharing insights and experiences from the trenches of software development and DevOps.",
    icon: Pencil,
  },
];
---

<MainLayout title="Kane Montreuil - DevOps Lead & Software Engineer">
  <div class="container">
    <!-- Hero Section -->
    <section class="py-20 sm:py-32">
      <div class="max-w-3xl">
        <h1 class="text-balance animate-fade-in">Hi, I'm Kane Montreuil ðŸ‘‹</h1>
        <p
          class="mt-6 text-xl text-gray-600 dark:text-gray-400 text-pretty animate-slide-up"
        >
          A DevOps lead passionate about enhancing developer experiences and
          building reliable, scalable systems. Currently transforming
          development workflows at NCR Voyix.
        </p>
        <div class="mt-8 flex flex-wrap gap-4">
          <a href="/about" class="btn-primary"> More About Me </a>
          <a href="/projects" class="btn-secondary"> View My Work </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16">
      <div class="grid md:grid-cols-3 gap-8">
        {
          features.map(({ title, description, icon: Icon }) => (
            <div class="card p-6">
              <div class="h-12 w-12 rounded-lg bg-blue-500/10 dark:bg-blue-400/10 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4">
                <Icon size={24} />
              </div>
              <h3 class="text-xl font-semibold mb-2">{title}</h3>
              <p class="text-gray-600 dark:text-gray-400">{description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Latest Content Section -->
    <section class="py-16">
      <h2 class="text-3xl font-bold mb-8">Latest Content</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Projects Preview -->
        <div class="card p-6">
          <h3 class="text-xl font-semibold mb-4">Recent Projects</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Check out some of my recent work and side projects.
          </p>
          <a href="/projects" class="link">View All Projects â†’</a>
        </div>

        <!-- Blog Preview -->
        <div class="card p-6">
          <h3 class="text-xl font-semibold mb-4">Latest Writing</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Thoughts and insights on software development, DevOps, and
            technology.
          </p>
          <a href="/writing" class="link">Read More â†’</a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
